<section class="page-section clearfix">
  <div class="container">
    <div class="intro">
      <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="{{ Model.ContentItem.Content.BagPart.ContentItems.first.Product.ProdImage.Paths.first | asset_url }}" alt="" />
        <div class="intro-text left-0 text-center bg-faded p-5 rounded">
          <h2 class="section-heading mb-4">
            <span class="section-heading-upper">Fresh Coffee</span>
            <span class="section-heading-lower">{{ Model.ContentItem.Content.BagPart.ContentItems.first.Product.ProdSubTitle.Text }}</span>
          </h2>
          <p class="mb-3">
              {{ Model.ContentItem.Content.BagPart.ContentItems.first.HtmlBodyPart.Html | raw }}
          </p>
          <div class="intro-button mx-auto">
            <a class="btn btn-primary btn-xl" href="{{ Model.ContentItem.Content.BagPart.ContentItems.first.Product.Link.Url }}">{{ Model.ContentItem.Content.BagPart.ContentItems.first.Product.Link.Text }}</a>
          </div>
        </div>
      </div>
  </div>
</section>

<section class="page-section cta">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <div class="cta-inner text-center rounded">
          <h2 class="section-heading mb-4">
            <span class="section-heading-upper">{{ Model.ContentItem.Content.BagPart.ContentItems.last.TitlePart.Title }}</span>
            <span class="section-heading-lower">{{ Model.ContentItem.Content.BagPart.ContentItems.last.Product.ProdSubTitle.Text }}</span>
          </h2>
          <p class="mb-0">{{ Model.ContentItem.Content.BagPart.ContentItems.last.HtmlBodyPart.Html | raw }}</p>
        </div>
      </div>
    </div>
  </div>
</section>